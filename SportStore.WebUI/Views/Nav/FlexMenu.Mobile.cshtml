@model IEnumerable<string>

<div data-role="navbar">
    <ul>
        @foreach (var link in Model)
        {
            <li>
                @Html.RouteLink(link, new { controller = "Product", action = "List", category = link, page = 1 }, new { @class = "btn btn-block  btn-lg" + (link == ViewBag.SelectedCategory ? " btn-primary" : "btn-default") })
            </li>
        }
    </ul>
</div>

